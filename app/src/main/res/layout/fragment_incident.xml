<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="#000000"
        tools:context=".IncidentFragment">

    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayoutLoginReg"
            android:layout_marginStart="60dp"
            android:layout_marginTop="425dp"
            android:layout_marginEnd="60dp"
            android:hint="Описание"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:helperTextTextColor="#FF0000"
            app:counterEnabled="true"
            app:counterMaxLength="32"
            app:counterTextColor="@color/white"
            tools:ignore="HardcodedText,MissingConstraints"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:prefixTextColor="@color/white"
            app:boxStrokeColor="@color/white"
            app:hintTextColor="@color/white" app:layout_constraintHorizontal_bias="1.0">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextTextPersonName"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="DuplicateIds"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
            android:text="3. Подтверждение"
            android:layout_width="260dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/white"
            android:layout_height="28dp" android:id="@+id/textView"
            tools:ignore="HardcodedText,MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.357" app:layout_constraintVertical_bias="0.66"/>
    <CheckBox
            android:text="Согласие на обработку данных"
            android:layout_width="266dp"
            android:textColor="@android:color/white"
            android:layout_height="48dp" android:id="@+id/checkBox"
            tools:ignore="HardcodedText,MissingConstraints" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.723"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <Button
            android:fontFamily="sans-serif-medium"
            android:text="Оповестить"
            android:textSize="12sp"
            android:layout_width="224dp"
            android:textColor="@android:color/black"
            android:layout_height="72dp" android:id="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.828"
            tools:ignore="HardcodedText"
            app:backgroundTint="@color/white"
            app:cornerRadius="81dp"
            app:layout_constraintHorizontal_bias="0.481"/>
    <TextView
            android:text="2. Опишите ситуацию"
            android:layout_width="260dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="28dp" android:id="@+id/textView2"
            tools:ignore="HardcodedText,MissingConstraints" app:layout_constraintHorizontal_bias="0.357"
            app:layout_constraintVertical_bias="0.491"/>
    <Button
            android:fontFamily="sans-serif-medium"
            android:text="Загрузить"
            android:textColor="@color/black"
            app:cornerRadius="10dp"
            android:textSize="12sp"
            app:backgroundTint="@color/white"

            android:layout_width="229dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="103dp" android:id="@+id/button2"
            tools:ignore="HardcodedText,MissingConstraints"
            app:layout_constraintVertical_bias="0.244"/>
    <TextView
            android:text="1. Загрузите материалы"
            android:layout_width="260dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="28dp" android:id="@+id/textView3"
            tools:ignore="HardcodedText,MissingConstraints" app:layout_constraintHorizontal_bias="0.397"
            app:layout_constraintVertical_bias="0.059"/>
    <ImageView
            android:visibility="invisible"
            android:src="@drawable/img"
            android:layout_width="336dp"
            android:layout_height="263dp" android:id="@+id/image"
            tools:ignore="ContentDescription,HardcodedText,MissingConstraints"
            android:contentDescription="TODO"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.496" android:layout_marginBottom="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>