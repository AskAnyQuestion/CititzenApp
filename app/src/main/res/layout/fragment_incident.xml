<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#000000"
        tools:context=".IncidentFragment">

    <Button
            android:fontFamily="sans-serif-medium"
            android:text="Оповестить"
            android:textSize="12sp"
            android:layout_width="224dp"
            android:textColor="@android:color/black"
            android:layout_height="72dp" android:id="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.742"
            tools:ignore="HardcodedText"
            app:backgroundTint="@color/white"
            app:cornerRadius="81dp"
            app:layout_constraintHorizontal_bias="0.481"/>
    <EditText
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_width="227dp"
            android:layout_height="74dp"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/white"
            android:id="@+id/editTextTextPersonName"
            tools:ignore="HardcodedText,LabelFor,MissingConstraints,SpeakableTextPresentCheck"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintVertical_bias="0.413"/>
    <CheckBox
            android:text="Согласие на обработку данных"
            android:layout_width="266dp"
            android:textColor="@android:color/white"
            android:layout_height="48dp" android:id="@+id/checkBox"
            tools:ignore="HardcodedText,MissingConstraints" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.605"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <TextView
            android:text="2. Опишите ситуацию"
            android:layout_width="260dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="28dp" android:id="@+id/textView2"
            tools:ignore="HardcodedText,MissingConstraints" app:layout_constraintHorizontal_bias="0.377"
            app:layout_constraintVertical_bias="0.325"/>
    <TextView
            android:text="3. Подтверждение"
            android:layout_width="260dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/white"
            android:layout_height="28dp" android:id="@+id/textView"
            tools:ignore="HardcodedText,MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.377" app:layout_constraintVertical_bias="0.524"/>
    <Button
            android:fontFamily="sans-serif-medium"
            android:text="Загрузить"
            android:textColor="@color/black"
            app:cornerRadius="10dp"
            android:textSize="12sp"
            app:backgroundTint="@color/white"

            android:layout_width="229dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="103dp" android:id="@+id/button2"
            tools:ignore="HardcodedText,MissingConstraints" app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintVertical_bias="0.164"/>
    <TextView
            android:text="1. Загрузите материалы"
            android:layout_width="260dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="28dp" android:id="@+id/textView3"
            tools:ignore="HardcodedText,MissingConstraints" app:layout_constraintHorizontal_bias="0.377"
            app:layout_constraintVertical_bias="0.091"/>
</androidx.constraintlayout.widget.ConstraintLayout>