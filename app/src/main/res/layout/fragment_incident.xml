<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="#000000"
        tools:context=".fragments.IncidentFragment">

    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayoutLoginReg"
            android:layout_marginStart="60dp"
            android:layout_marginTop="425dp"
            android:layout_marginEnd="60dp"
            android:hint="@string/description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:helperTextTextColor="#FF0000"
            app:counterEnabled="true"
            app:counterMaxLength="32"
            app:counterTextColor="@color/white"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:prefixTextColor="@color/white"
            app:boxStrokeColor="@color/white"
            app:hintTextColor="@color/white"
            app:layout_constraintHorizontal_bias="1.0">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextTextPersonName"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="DuplicateIds"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
            android:text="@string/confirmation"
            android:layout_width="260dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/white"
            android:layout_height="28dp" android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.357"
            app:layout_constraintVertical_bias="0.66"/>
    <CheckBox
            android:text="@string/consentDataProcess"
            android:layout_width="266dp"
            android:textColor="@android:color/white"
            android:layout_height="48dp"
            android:id="@+id/checkBox"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.723"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <Button
            android:fontFamily="sans-serif-medium"
            android:text="@string/notify"
            android:textSize="12sp"
            android:layout_width="224dp"
            android:layout_height="72dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@android:color/black"
            android:id="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="HardcodedText"
            app:backgroundTint="@color/white"
            app:cornerRadius="81dp"
            app:layout_constraintVertical_bias="0.828"
            app:layout_constraintHorizontal_bias="0.481"/>
    <TextView
            android:text="@string/addSituation"
            android:layout_width="260dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="28dp" android:id="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.357"
            app:layout_constraintVertical_bias="0.491"/>
    <ImageView
            android:src="@drawable/upload"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageUpload"
            tools:ignore="MissingConstraints"
            android:contentDescription="@string/upload"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.200"
            app:layout_constraintHorizontal_bias="0.500"
    />
    <TextView
            android:text="@string/addMaterial"
            android:layout_width="260dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="28dp" android:id="@+id/textView3"
            tools:ignore="HardcodedText,MissingConstraints" app:layout_constraintHorizontal_bias="0.397"
            app:layout_constraintVertical_bias="0.059"/>
    <androidx.viewpager.widget.ViewPager
            android:layout_width="340dp"
            android:layout_height="260dp"
            android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/viewPager"
            tools:ignore="MissingConstraints"/>
</androidx.constraintlayout.widget.ConstraintLayout>